Let ([
    ~columnNr = 1 ;
	 ~column =

		Case ( not ValueCount(~list); "" ;

		While ([ 
		
			~i = 0 ;
			~x = ValueCount ( ~list );
			~newlist = ""
			
			] ; 
			
			 ~i < ~x ; 
			
			[

			~i = ~i + 1 ;
 
			~newlist = List( ~newlist ; GetValue ( Substitute ( GetValue ( ~list ; ~i ) ; "," ; "Â¶" ) ; ~columnNr  ))
			
			]; 
			
			~newlist  
			
		)
    );
	
	~setVar = Evaluate ( "Let ( $$_VIRTUAL_VALUE_LIST[" & ~columnNr  &"] = \"" & ~column & "\" ; 0 )" )
	
		];
	
	0
	
)
